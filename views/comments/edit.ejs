<% include ../partials/header %>

<div class="container">
    
        <h1 style="text-align: center">Edit Your Comment</h1>
        <div style="width: 40%; margin: 25px auto;">
    
            <form action="/posts/<%= post_id%>/comments/<%= comment._id %>" method="POST">

                <div class = "form-group">
                        <label for="anony">Public or Anonymous:</label>
                      <select name="anony" ng-model="selectItem" id="anony" onChange="showType(this);">
                          <optgroup label="Public or Anonymous">
                              <option value="<%=comment.anony%>" selected disabled hidden><%=comment.anony%></option>
                              <option value = "Public" >Public</option>
                              <option value = "Anonymous" >Anonymous</option>
                          </optgroup>
                          
                      </select>
              </div>
                             
                <div class="form-group">
                    <label for="text">Text:</label>
                    <textarea class="form-control" type="text" id="text" name="text" placeholder="Enter Your Comment" required = "" value="<%= typeof text != 'undefined' ? text : '' %>"><%=comment.text%></textarea>
                </div>
               
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update Comment</button>
                </div>
            </form>
        
            <a href="/posts/<%= post_id %>">Back</a>

        </div>
</div>
