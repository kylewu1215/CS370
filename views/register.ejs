    <title>Dooley Eats Register</title>

    <!-- Bootstrap core CSS -->
    <link href="https://qiaolin22.github.io/login/static/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="https://qiaolin22.github.io/login/static/css/signin.css" rel="stylesheet">
    </head>

<body class="text-center">
  <div class="row mt-5">
  <div class="col-md-6 m-auto">
  <div class="card card-body">
      <h1 class="text-center mb-3">
        Register
      </h1>
      <% include ./partials/messages %>
      <form action="/users/register" method="POST">
        <img class="mb-4" src="https://qiaolin22.github.io/login/static/image/logo.png" alt="" width="172" height="172">    
        <h1 class="h3 mb-3 font-weight-normal">Dooley Eats</h1>
        
        <div class = "form-group">
            <label for="username">Username:</label>
            <input 
              type="text" 
              id="name"
              name = "username" 
              placeholder = "Enter Username"
              required = ""
              value="<%= typeof username != 'undefined' ? username : '' %>"
            />
        </div>

        <div  class = "form-group">
            <label for="email">Your Emory Email:</label>
            <input 
              type="email" 
              id="email"
              name="email"
              pattern=".+@emory.edu" 
              placeholder = "StudentID@emory.edu" 
              required title = "Please enter your Emory Email"
              value="<%= typeof email != 'undefined' ? email : '' %>"
            />
        </div>

        <div class = "form-group">
            <label for="password">Password:</label>
            <input 
              type="password"  
              id="password" 
              name="password"
              pattern=".{5,20}" 
              placeholder="Create password" 
              required title="Password must be 5 to 20 characters"
              value="<%= typeof password != 'undefined' ? password : '' %>"
            />
        </div>

        <div class = "form-group">
            <label for="confirm-password">Confirm Password:</label>
            <input 
              type="password"  
              id="confirm-password" 
              name="password2"
              placeholder="Confirm Password" 
              required = "";
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
              oninput = "check(this)"
            />
            <script language='javascript' type='text/javascript'>
              function check(input) {
                  if (input.value != document.getElementById('password').value) {
                      input.setCustomValidity('Passwords must match');
                  } else {
                      // input is valid -- reset the error message
                      input.setCustomValidity('');
                  }
              }
            </script>
        </div>
        <!-- Send email to confirm -->
        <button type="submit" class="btn btn-primary btn-block">
            Sign Up
        </button>
          <!-- <a href="https://qiaolin22.github.io/main.html" class="btn btn-primary"> Sign Up</a>
          <a href="https://qiaolin22.github.io/main.html" class="btn btn-link">Back to Home</a>
          <p class="lead mt-4">Already Have An Account? <a href="/users/login">Login</a></p>
          <p class="mt-5 mb-3 text-muted">© 2019-2020</p> -->

    </form>
    <p class="lead mt-4">Already Have An Account? <a href="/users/login">Login</a></p>
    <p class="mt-5 mb-3 text-muted">© 2019-2020</p>
  </div>
  </div>
  </div>
  </script>

  </body>
  </html>