    <title>Activate Your Account</title>

    <!-- Bootstrap core CSS -->
    <link href="https://qiaolin22.github.io/login/static/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="https://qiaolin22.github.io/login/static/css/signin.css" rel="stylesheet">
	</head>
	
<body class="text-center">
<div class="row">
	<div class="col-md-12">
		<form action="/users/reset/<%= token %>" method="POST">
		<img class="mb-4" src="https://qiaolin22.github.io/login/static/image/logo.png" alt="" width="172" height="172"> 
		  <legend>Update your Password</legend>
		  <% include ./partials/messages %>
		  <div class="form-group">
		    <label for="password">New Password</label>
		    <input type="password" name="password" value="" placeholder="New password" autofocus="autofocus" class="form-control"/>
		  </div>
		  <div class="form-group">
		    <label for="confirm">Confirm Password</label>
		    <input type="password" name="confirm" value="" placeholder="Confirm password" class="form-control"/>
		  </div>
		  <div class="form-group">
		    <button type="submit" class="btn btn-primary">Update Password</button>
		  </div>
		</form>
	</div>
</div>
</html>